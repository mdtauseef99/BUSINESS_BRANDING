@model BizzBranding.Areas.Admin.Models.MembershipWebModel
@{
    ViewBag.Title = "AddEditMembership";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.mainmenu = "AddEditMembership";
}

@*<script src="~/Scripts/jquery-1.8.2.js"></script>*@


<div id="page-heading">
    <h1>Add / Edit Membership</h1>
    @if (Session["Error"] != null)
    {
        <div class="errormsg">
            @Session["Error"].ToString()
        </div>
        Session["Error"] = null;
    }
</div>
@{Html.EnableClientValidation(true);}
@using (Html.BeginForm("AddEditMembership", "MasterData", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    @Html.HiddenFor(x => x.MembershipID)
    //@Html.HiddenFor(x=>x.AccessPlanId)
   // @Html.HiddenFor(x=>x.UserId)
    @Html.HiddenFor(x=>x.AccessPlanName)
    @Html.HiddenFor(x=>x.BusinessName)
    <div style="box-shadow: 0 0 5px; border-radius: 10px;">
        <div class="emptyspace"></div>

        <div class="row">
            <div class="rowleft">Access Plan</div>
            <div class="rowright">
                @Html.DropDownListFor(x => x.AccessPlanId, Model.AccessPlanNames, "Select", new { @class = "styledselect_form_1" })
                @Html.ValidationMessageFor(x => x.AccessPlanId)
            </div>
        </div>
        <div class="row">
            <div class="rowleft">Business Name</div>
            <div class="rowright">
                @Html.DropDownListFor(x => x.UserId, Model.BusinessNames, "Select", new { @class = "styledselect_form_1" })
                @Html.ValidationMessageFor(x => x.UserId)
            </div>
        </div>
        <div class="row">
            <div><span class="rowleft">Activated On</span></div>
            <div class="rowright">
                @Html.TextBoxFor(x => x.ActivatedOn, new { @class = "inp-form", @placeholder = "Valid From", @id = "date" })
                @Html.ValidationMessageFor(x => x.ActivatedOn)
            </div>
        </div>
        <div class="row">
            <div><span class="rowleft">Expires On</span></div>
            <div class="rowright">
                @Html.TextBoxFor(x => x.ExpiresOn, new { @class = "inp-form", @placeholder = "Valid To", @id = "date1" })
                @Html.ValidationMessageFor(x => x.ExpiresOn)
            </div>
        </div>

        <div class="row">
            <div class="rowleft">@Html.LabelFor(x => x.IsActive)</div>
            <div class="rowright">
                @Html.CheckBoxFor(x => x.IsActive)
            </div>
        </div>


        <div class="row">
            <div class="rowleft">
            </div>
            <div class="rowright">
                <input type="submit" value="Submit" class="form-submit left" />
                <a href="@Url.Action("Membership", "MasterData")" class="form-reset">Cancel</a>
            </div>

        </div>
    </div>
}

