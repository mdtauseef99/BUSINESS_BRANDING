@model BizzBranding.Areas.Admin.Models.SubCategoryWebModel
@{
    ViewBag.Title = "AddEditSubCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.mainmenu = "AddEditSubCategory";

}
<script src="~/Scripts/jquery-1.8.2.js"></script>

<div id="page-heading">
    <h1>Add / Edit SubCategory</h1>
    @if (Session["Error"] != null)
    {
        <div class="errormsg">
            @Session["Error"].ToString()
        </div>
        Session["Error"] = null;
    }
</div>
@{Html.EnableClientValidation(true);}
@using (Html.BeginForm())
{
    
    @Html.HiddenFor(x => x.SubCategoryId)
    <div style="box-shadow: 0 0 5px; border-radius: 10px;">
        <div class="emptyspace"></div>
        <div class="row">
            <div class="rowleft">@Html.LabelFor(x => x.CategoryName)</div>
            <div class="rowright">
                @Html.DropDownListFor(x=>x.ParentCategoryId, Model.CategoryNames, "Select", new { @class = "styledselect_form_1" })
                @Html.ValidationMessageFor(x => x.ParentCategoryId)
            </div>
        </div>
        <div class="row">
            <div ><span class="rowleft">SubCategory Name</span></div>
            <div class="rowright">
                @Html.TextBoxFor(x => x.SubCatgoryName, new { @class = "inp-form", @placeholder = "SubCategory Name" })
                @Html.ValidationMessageFor(x => x.SubCatgoryName)
            </div>
        </div>
        @*<div class="row">
            <div class="rowleft"><span>Course Detail</span></div>
            <div class="rowright">
                @Html.TextAreaFor(x => x.CourseDetails, new { @class = "form-textarea" })
                 @Html.ValidationMessageFor(x => x.CourseName)
            </div>
        </div>*@
        <div class="row">
            <div class="rowleft">@Html.LabelFor(x => x.IsActive)</div>
            <div class="rowright">
                @Html.CheckBoxFor(x => x.IsActive)
            </div>
        </div>



        <div class="row">
            <div class="rowleft">
                
            </div>
            <div class="rowright">
                <input type="submit" value="Submit" class="form-submit left" />
                <a href="@Url.Action("SubCategory","MasterData")" class="form-reset">Cancel</a>
            </div>

        </div>
    </div>
}
