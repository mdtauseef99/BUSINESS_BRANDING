@model BizzBranding.Areas.Admin.Models.IndustryWebModel
@{
    ViewBag.Title = "AddEditIndustry";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-heading">
    <h1>Add / Edit Industries</h1>
    @if (Session["Error"] != null)
    {
        <div class="errormsg">
            @Session["Error"].ToString()
        </div>
        Session["Error"] = null;
    }
</div>
@{Html.EnableClientValidation(true);}
@using (Html.BeginForm())
{
    
    @Html.HiddenFor(x => x.IndustryId)
    <div style="box-shadow: 0 0 5px; border-radius: 10px;">
        <div class="emptyspace"></div>
        
        <div class="row">
            <div ><span class="rowleft">Industry Name</span></div>
            <div class="rowright">
                @Html.TextBoxFor(x => x.IndustryName, new { @class = "inp-form", @placeholder = "Industry Name" })
                @Html.ValidationMessageFor(x => x.IndustryName)
            </div>
        </div>
                <div class="row">
            <div ><span class="rowleft">Description</span></div>
            <div class="rowright">
                @Html.TextAreaFor(x => x.Description, new { @class = "form-textarea" })
                @Html.ValidationMessageFor(x => x.Description)
            </div>
        </div>
        <div class="row">
            <div class="rowleft">@Html.LabelFor(x => x.IsActive)</div>
            <div class="rowright">
                @Html.CheckBoxFor(x => x.IsActive)
            </div>
        </div>


        <div class="row">
            <div class="rowleft">
                
            </div>
            <div class="rowright">
                <input type="submit" value="Submit" class="form-submit left" />
                <a href="@Url.Action("Industry","MasterData")" class="form-reset">Cancel</a>
            </div>

        </div>
    </div>
}
