@model BizzBranding.Areas.Admin.Models.AdministratorWebModel
@{
    ViewBag.Title = "AddEditAdministrator";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.mainmenu = "AllAdministrators";
}

<div id="page-heading">
    <h1>Add/Edit Administrator</h1>
    @if (Session["Error"] != null)
    {
        <div class="errormsg">
            @Session["Error"].ToString()
        </div>
        Session["Error"] = null;
    }
</div>

@{ Html.EnableClientValidation(); }

@using (Html.BeginForm("AddEditAdministrator", "MasterData", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   
    @Html.HiddenFor(x => x.AdminId)
    
    <div style="box-shadow: 0 0 5px; border-radius: 10px;">
        <div class="emptyspace"></div>
        <div class="row">
            <div ><span class="rowleft">First Name</span></div>
            <div class="rowright">
                @Html.TextBoxFor(x => x.FirstName, new { @class = "inp-form", @placeholder = "First Name" })
            </div>
        </div>
                <div class="row">
            <div ><span class="rowleft">Last Name</span></div>
            <div class="rowright">
                @Html.TextBoxFor(x => x.LastName, new { @class = "inp-form", @placeholder = "Last Name" })
            </div>
        </div>

        <div class="row">
            <div ><span class="rowleft">User Name</span></div>
            <div class="rowright">
                @Html.TextBoxFor(x => x.UserName, new { @class = "inp-form", @placeholder = "User Name" })
                @Html.ValidationMessageFor(x => x.UserName)
            </div>
        </div>
        <div class="row">
            <div class="rowleft">@Html.LabelFor(x => x.Email)</div>
            <div class="rowright">
                @Html.TextBoxFor(x => x.Email, new { @class = "inp-form", @placeholder = "Email" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
        @if (Model.AdminId == 0)
        {
            <div class="row">
                <div class="rowleft">@Html.LabelFor(x => x.Password)</div>
                <div class="rowright">
                    @Html.PasswordFor(x => x.Password, new { @value = Model.Password, @class = "inp-form", @placeholder = "Password" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
            <div class="row">
                <div ><span class="rowleft">Confirm Password</span></div>
                <div class="rowright">
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "inp-form", @placeholder = "Confirm Password" })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                </div>
            </div>
        }


@*        <div class="row">
            <div class="rowleft">@Html.LabelFor(x => x.SubjectID)</div>
            <div class="rowright">
                @Html.DropDownListFor(x => x.SubjectID, Model.Subjects, "Select", new { @class = "styledselect_form_1" })
            </div>
        </div>*@

        <div class="row">
            <div class="rowleft">@Html.LabelFor(x => x.RoleID)</div>
            <div class="rowright">
                @Html.DropDownListFor(x => x.RoleID, Model.Roles, "Select", new { @class = "styledselect_form_1" })
            </div>
        </div>

        <div class="row">
            <div class="rowleft">@Html.LabelFor(x => x.IsActive)</div>
            <div class="rowright">
                @Html.CheckBoxFor(x => x.IsActive)
            </div>
        </div>
        <div class="row">
            <div class="rowleft">
                
            </div>
            <div class="rowright">
                <input type="submit" value="Submit" class="form-submit left">
                <a href="@Url.Action("AllAdministrators", "MasterData")" class="form-reset">Cancel</a>
            </div>

        </div>
    </div>
}


