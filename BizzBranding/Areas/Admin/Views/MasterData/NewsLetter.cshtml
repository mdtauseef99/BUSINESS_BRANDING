@model BizzBranding.Areas.Admin.Models.NewsLetterWebModel

@{
    ViewBag.Title = "NewsLetter";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
