@model BizzBranding.Areas.Admin.Models.LogonModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Login</title>
    <link href="~/Areas/Admin/css/screen.css" rel="stylesheet" />
    <script src="~/Areas/Admin/js/jquery-1.9.1.js"></script>
    <script src="~/Areas/Admin/js/custom_jquery.js"></script>
</head>
<body id="login-bg">
    <div id="login-holder">
        <div id="logo-login">
            <a href="index.html">
                @*<img src="~/Areas/Admin/images/shared/logo.png" width="156" height="40" alt="" />*@
                Bizz Branding Login
            </a>
        </div>
        <div class="clear"></div>
        @using (Html.BeginForm("Login", "Logon"))
        {
           
            <div id="loginbox">
                 @if (Session["Error"] != null)
                    {
                        <div class="errormsgs">
                            @Session["Error"].ToString()
                        </div>
                        Session["Error"] = null;
                    }
                <div id="login-inner">
                   
                    <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                            <th>Username</th>
                            <td>
                                @Html.TextBoxFor(x => x.UserName, new { @placeholder = "Username", @class = "login-inp" })
                                @*<input type="text" />*@</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>
                                @Html.PasswordFor(x => x.Password, new { @placeholder = "Password", @class = "login-inp" })
                                @*<input type="password" placeholder="Password" class="login-inp" />*@</td>
                        </tr>
                        <tr>
                            <th></th>
                            <td valign="top">
                                <input type="checkbox" class="checkbox-size" id="login-check" /><label for="login-check">Remember me</label></td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <input type="submit" class="submit-login" /></td>
                        </tr>
                    </table>
                </div>
                <div class="clear"></div>
                <a href="" class="forgot-pwd">Forgot Password?</a>
            </div>
        }

        @using (Html.BeginForm())
        {
            <div id="forgotbox">
                <div id="forgotbox-text">Please send us your email and we'll reset your password.</div>
                <div id="forgot-inner">
                    <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                            <th>Email address:</th>
                            <td>
                                <input type="text" value="" class="login-inp" /></td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <input type="submit" class="submit-login" /></td>
                        </tr>
                    </table>
                </div>
                <!--  end forgot-inner -->
                <div class="clear"></div>
                <a href="" class="back-login">Back to login</a>
            </div>
        }



    </div>
</body>
</html>
