@model BizzBranding.CommonUtility.SearchwordsModel

@{
    ViewBag.Title = "SearchMember";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-1.8.2.min.js"></script>

