@model BizzBranding.Areas.Admin.Models.ProductWebModel
@{
    ViewBag.Title = "ViewProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@Html.DisplayFor(x => x.ProductName)</h2>
@Html.HiddenFor(x => x.ProductId)
<div style="box-shadow: 0 0 5px; border-radius: 10px;">
    <div class="emptyspace"></div>
             <div class="row">
        <div ><span class="rowleft">Product Name</span></div>
        <div class="rowright">
            @Html.DisplayFor(x => x.ProductName)
        </div>
    </div>

         <div class="row">
        <div ><span class="rowleft">Category Name</span></div>
        <div class="rowright">
            @Html.DisplayFor(x => x.CategoryName)
        </div>
    </div>

    <div class="row">
        <div ><span class="rowleft">SubCategory Name</span></div>
        <div class="rowright">
            @Html.DisplayFor(x => x.SubCategoryName)
        </div>
    </div>
        <div class="row">
        <div ><span class="rowleft">Product Details</span></div>
        <div class="rowright">
            @Html.DisplayFor(x => x.ProdDetails)
        </div>
    </div>

     <div class="row">
        <div><span class="rowleft">Product Images</span></div>
        <div class="rowright">
           @foreach (var item in Model.ProductImages)
            {
                <img width="50px" height="50px" src="~/Areas/Admin/ProjectImages/ProductImage/@item.ProdImage"/>
            }
          
        </div>
    </div>

  
    <div class="row">
        <div class="rowleft">@Html.LabelFor(x => x.IsActive)</div>
        <div class="rowright">
            @Html.DisplayTextFor(x => x.IsActive)
        </div>
    </div>



    <div class="row">
        <div class="rowleft">
        </div>
        <div class="rowright">
            <a href="@Url.Action("Products","Product")" class="form-reset">Back</a>

        </div>

    </div>
</div>
