@model IEnumerable<BizzBranding.CommonUtility.NewsModel>



@foreach (var item in Model)
{
    string str = item.NewsDesc;
    if (str.Length > 100)
    {
        str = str.Substring(0, 100);
    }
    
    
    <h4>@item.NewsTitle</h4>
    <p>@str
        <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal-@item.NewsId" style="padding: 0 5px; font-size: 14px;">More</button>
    </p>
    
    <!-- Modal -->
    <div class="modal fade homepop" id="myModal-@item.NewsId" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">"@item.NewsTitle"</h4>
                </div>
                <div class="modal-body">
                    @item.NewsDesc
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>  
}