                                            @*<img src="~/Images/Co-BrandProductImages/@item.CoProductImages" alt="..." class="img-big">*@
                                        </a>
                                    </div>
                                    
                                    <div class="row co-brand">
                                        <div class="col-sm-6 img-big-cobrand">
                                            <a href="#" data-toggle="modal" data-target="#myModal-@item.CoBrandId">
                                                <img src="~/Images/Co-BrandProductImages/@item.CoProductImages" alt="..." class="img-big ">
                                            </a>
                                        </div>
                                        <div class="modal fade" id="myModal-@item.CoBrandId" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content modal-content-Block">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title" id="myModalLabel">@item.CoBrandedName</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        @item.ProductDetails
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
