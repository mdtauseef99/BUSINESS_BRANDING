    $(document).ready(function () {
        $('#frmsearch').submit(function (e) {
            e.preventDefault();
            debugger;
            var txtVal = $('#txtSearching').val();
            if (txtVal != "") {
                var txt = $('.form-control').val();
                $('#Displaytext').text(txtVal);
                window.location.href = '/Home/Searching?searchValue=' + txt;

