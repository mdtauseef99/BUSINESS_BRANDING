@model BizzBranding.Models.LandingPageModel
@{
    ViewBag.Title = "ChangeLogoandBanner";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
         <link href="~/Content/lib/fontawesome/font-awesome.min.css" rel="stylesheet" />
     <link href="~/Content/lib/fontawesome/font-awesome-ie7.min.css" rel="stylesheet" />
     <link href="~/Content/lib/jquery.bxslider/jquery.bxslider.css" rel="stylesheet" />
    <link href="~/Content/style/custom.css" rel="stylesheet" />
}
@using (Html.BeginForm("UpdateProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="brands">
        <div class="container">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <h2>Change Logo and Banner</h2>
                     <div class=" " style="margin:0 10px;">
                    <form role="form" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Edit Title</label>
                                @Html.TextBoxFor(Model => Model.BusinessName, new { @class = "form-control", @placeholder = "Ex: Business Name" })
                                @Html.ValidationMessageFor(Model => Model.BusinessName)
                                @*                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Ex: Business Name">*@
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Change Banner Image</label>
                                <input type="file" id="bannerImg" name="bannerfile">
                                <p class="help-block">For Best Visibility Upload Image of 1000px*300px</p>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Change Company Logo</label>
                                <input type="file" id="coLogoImg" name="logofile">
                                <p class="help-block">For Best Visibility Upload Image of 200px*150px</p>
                            </div>
                            <input type="submit" class="btn btn-success" />
                            <button type="button" class="btn  btn-warning" onclick="window.location.href = '../UsersProfile'">Cancel</button>
                    </form>
                </div>
            </div>
        </div>


    </section>
    <div class="container brands">

        <div class="col-sm-2"></div>
    </div>
}
